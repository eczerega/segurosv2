<p id="notice"><%= notice %></p>

<h1>Listing Usuarios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Rut</th>
      <th>Dv</th>
      <th>Email</th>
      <th>Telefono fijo</th>
      <th>Telefono celular</th>

      <th>Image</th>
      <th>Tipo</th>
      <th>Estado</th>
      <th>Punto venta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.apellido %></td>
        <td><%= usuario.rut %></td>
        <td><%= usuario.dv %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.telefono_fijo %></td>
        <td><%= usuario.telefono_celular %></td>
        <td><%= usuario.image %></td>
        <td><%= usuario.tipo %></td>
        <td><%= usuario.estado %></td>
        <td><%= usuario.punto_venta %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

